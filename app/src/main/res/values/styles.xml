<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.NoActionBar"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="text_style1">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="text_style2">
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="small_btn">
        <item name="android:background">@drawable/small_btn</item>
        <item name="android:textColor">@color/text666</item>
    </style>

    <style name="small_btn_checked">
        <item name="android:background">@drawable/small_btn_checked</item>
        <item name="android:textColor">@color/white1</item>
    </style>

    <style name="customDialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">@color/color_fff</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="welcome" parent="AppTheme">
        <item name="android:background">@drawable/welcome</item>
    </style>


    <!--GridView的样式-->
    <style name="GridViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/dp_0</item>
        <item name="android:layout_marginLeft">@dimen/dp_8</item>
        <item name="android:layout_marginRight">@dimen/dp_8</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:layout_marginBottom">@dimen/dp_15</item>
        <item name="android:clipToPadding">true</item>
        <item name="android:numColumns">3</item>
        <item name="android:scrollbars">none</item>
    </style>


    <!--RadioButton样式-->
    <style name="RadioButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/color_323232</item>
        <item name="android:background">@drawable/selector_radiobutton_bg</item>
    </style>

    <!--横线的样式-->
    <style name="LandscapeViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/color_fff</item>
    </style>
    <!--背景透明-->
    <style name="myTransparent">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>
    <!--checkbox的样式-->
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_check</item>
    </style>

    <!--点的样式-->
    <style name="DotStyle">
        <item name="android:layout_width">@dimen/dp_8</item>
        <item name="android:layout_height">@dimen/dp_8</item>
        <item name="android:background">@drawable/point_unfocused</item>
        <item name="android:layout_marginLeft">@dimen/dp_1_5</item>
        <item name="android:layout_marginRight">@dimen/dp_1_5</item>
    </style>

    <!--dialog_normal_layout中Button的样式-->
    <style name="DialogButtonStyle">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_dialog_btn</item>
        <item name="android:textColor">@color/color_000</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>


    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--组合设置RadioButton的样式-->
    <style name="GroupRadioButtonStyle">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/color_10AEFF</item>
        <item name="android:textColor">@color/color_group_text</item>
        <item name="android:drawableTop">@drawable/selector_group_output</item>
        <item name="android:paddingTop">@dimen/dp_2</item>
        <item name="android:paddingBottom">@dimen/dp_2</item>
        <item name="android:drawablePadding">-5dp</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
</resources>
