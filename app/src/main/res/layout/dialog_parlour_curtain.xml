<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_920"
    android:layout_height="wrap_content"
    android:background="@color/color_E3E8F2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_E3E8F2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注：灰色为选中状态，白色为未选中"
            android:textColor="@color/color_000"
            android:textSize="@dimen/sp_18"
            android:paddingLeft="@dimen/dp_8"
            android:paddingTop="@dimen/dp_10"
            android:background="@color/color_E3E8F2"
            android:paddingBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            />

        <ImageView
            android:id="@+id/dialog_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@color/color_E3E8F2"
            android:paddingRight="@dimen/dp_5"
            android:src="@drawable/close" />
        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/color_fff"
            android:background="@color/color_10AEFF"
            android:layout_toLeftOf="@id/dialog_back"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            />
    </RelativeLayout>

    <GridView
        android:id="@+id/parlour_dialog_gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/color_E3E8F2"
        android:clipToPadding="true"
        android:numColumns="3"
        android:scrollbars="none" />

</LinearLayout>
