<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/tiao"
        android:drawableLeft="@drawable/liebiao"
        android:drawablePadding="@dimen/dp_20"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_30"
        android:text="设备列表"
        android:textColor="@color/color_88222223"
        android:textSize="@dimen/sp_22" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="@drawable/tiao"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="筛选"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_40"
            android:textColor="@color/color_88222223"
            android:textSize="@dimen/sp_22"
            />
        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="2"
            >
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:text="类型"
                android:gravity="center"
                android:textColor="@color/color_88222223"
                android:textSize="@dimen/sp_22"
                />
            <TextView
                android:id="@+id/tv_equipment_lamplight"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/rect_blue7"
                android:gravity="center"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_22"
                />
            <ImageView
                android:id="@+id/equipment_lamplight"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:src="@drawable/more"
                android:background="@drawable/rect_blue6"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_40"
            >
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:text="房间"
                android:gravity="center"
                android:textColor="@color/color_88222223"
                android:textSize="@dimen/sp_22"
                />
            <TextView
                android:id="@+id/tv_equipment_parlour"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="客厅"
                android:background="@drawable/rect_blue7"
                android:gravity="center"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_22"
                />
            <ImageView
                android:id="@+id/equipment_parlour"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:src="@drawable/more"
                android:background="@drawable/rect_blue6"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:id="@+id/equipment_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
        <cn.etsoft.smarthome.widget.ListViewForScrollView
            android:id="@+id/equipment_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </ScrollView>
</LinearLayout>