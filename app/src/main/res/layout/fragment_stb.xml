<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="2">

            <Button
                android:id="@+id/stb_switch"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_120"
                android:layout_marginLeft="@dimen/dp_62"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/rect_red2"
                android:drawableBottom="@drawable/kaiguananniu"
                android:drawablePadding="-40dp"
                android:paddingBottom="@dimen/dp_40" />

            <Button
                android:id="@+id/stb_switch_tv"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_120"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@drawable/rect_yellow2"
                android:drawableBottom="@drawable/kaiguananniu"
                android:drawablePadding="-30dp"
                android:paddingBottom="@dimen/dp_20"
                android:text="TV"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_20" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="@dimen/dp_120"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_62"
                android:layout_marginRight="@dimen/dp_20"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/stb_jia"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_15"
                    android:background="@drawable/selector_blue_up"
                    android:clickable="true"
                    android:src="@drawable/add" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="VOL"
                    android:background="@color/color_4FC1E9"
                    android:textColor="@color/color_fff"
                    android:textSize="@dimen/sp_20" />

                <ImageView
                    android:id="@+id/stb_jian"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_15"
                    android:clickable="true"
                    android:background="@drawable/selector_blue_down"
                    android:src="@drawable/subtract" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_120"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_20"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/stb_shang"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_15"
                    android:clickable="true"
                    android:background="@drawable/selector_red_up"
                    android:src="@drawable/shang" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="CH"
                    android:background="@color/color_FC6E51"
                    android:textColor="@color/color_fff"
                    android:textSize="@dimen/sp_20" />

                <ImageView
                    android:id="@+id/stb_xia"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_15"
                    android:clickable="true"
                    android:background="@drawable/selector_red_down"
                    android:src="@drawable/xia" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/stb_one"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/rect_gray4"
                android:text="1"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_52" />

            <Button
                android:id="@+id/stb_two"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/rect_gray4"
                android:text="2"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_52" />

            <Button
                android:id="@+id/stb_three"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/rect_gray4"
                android:text="3"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_52" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1">

            <Button
                android:id="@+id/stb_four"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/rect_gray4"
                android:text="4"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_52" />

            <Button
                android:id="@+id/stb_five"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/rect_gray4"
                android:text="5"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_52" />

            <Button
                android:id="@+id/stb_six"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/rect_gray4"
                android:text="6"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_52" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1">

            <Button
                android:id="@+id/stb_seven"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/rect_gray4"
                android:text="7"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_52" />

            <Button
                android:id="@+id/stb_eight"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/rect_gray4"
                android:text="8"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_52" />

            <Button
                android:id="@+id/stb_nine"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/rect_gray4"
                android:text="9"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_52" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1">

            <Button
                android:id="@+id/stb_hundred"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/rect_gray3"
                android:text="+100"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_32" />

            <Button
                android:id="@+id/stb_zero"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/rect_gray4"
                android:text="0"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_52" />

            <Button
                android:id="@+id/stb_last"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/rect_gray3"
                android:text="last\nCH"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_32" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>