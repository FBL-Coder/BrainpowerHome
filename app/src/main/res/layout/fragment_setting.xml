<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="2.5"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        android:src="@drawable/beijingtu3"
        android:scaleType="fitXY"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="3.5"
        >
        <LinearLayout
            android:id="@+id/ll_setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_5"
            >
            <TextView
                android:id="@+id/setting_networking"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/rect_yellow1"
                android:drawableRight="@drawable/lianwang"
                android:paddingRight="@dimen/dp_55"
                android:paddingLeft="@dimen/dp_55"
                android:gravity="center_vertical"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_20"
                />
            <TextView
                android:id="@+id/setting_room"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/rect_blue1"
                android:drawableRight="@drawable/fangjian"
                android:paddingRight="@dimen/dp_55"
                android:paddingLeft="@dimen/dp_55"
                android:gravity="center_vertical"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_20"
                />
            <TextView
                android:id="@+id/setting_scene"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/rect_red1"
                android:drawableRight="@drawable/qingjin"
                android:paddingRight="@dimen/dp_55"
                android:paddingLeft="@dimen/dp_55"
                android:gravity="center_vertical"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_20"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/ll_setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_5"
            >
            <TextView
                android:id="@+id/setting_group"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/rect_green1"
                android:drawableRight="@drawable/zuhe"
                android:paddingRight="@dimen/dp_55"
                android:paddingLeft="@dimen/dp_55"
                android:gravity="center_vertical"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_20"
                />
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@null"
                 />
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@null"
                 />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>