<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_300"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/color_48464c">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_5"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/sceneSet_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="选择布防类型"
                android:textColor="@color/color_000"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/safety_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/dp_30"
                android:background="@drawable/select_white"
                android:clickable="true"
                android:drawableRight="@drawable/more_black"
                android:gravity="center"
                android:textColor="@color/color_000"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:orientation="horizontal">

            <Button
                android:id="@+id/safety_all_close"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_white_no"
                android:text="全部撤防"
                android:padding="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_5"
                android:textColor="@color/color_000"
                android:textSize="@dimen/sp_18" />

            <Button
                android:id="@+id/safety_all_open"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_white_no"
                android:text="全部布防"
                android:layout_marginLeft="@dimen/dp_5"
                android:padding="@dimen/dp_10"
                android:textColor="@color/color_000"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>