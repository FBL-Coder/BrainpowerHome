<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />
    <FrameLayout
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="6"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        >
    </FrameLayout>
    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:orientation="horizontal"
        android:background="@color/color_10AEFF"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        >

        <RadioButton
            android:id="@+id/group_output"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="输出"
            android:button="@null"
            android:textColor="@color/color_group_text"
            android:textSize="@dimen/sp_18"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/selector_group_output"
            android:paddingTop="@dimen/dp_5"
            />

        <RadioButton
            android:id="@+id/group_input"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="输入"
            android:button="@null"
            android:textColor="@color/color_group_text"
            android:textSize="@dimen/sp_18"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/selector_group_input"
            android:paddingTop="@dimen/dp_5"
            />

        <RadioButton
            android:id="@+id/group_infrared"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="红外"
            android:button="@null"
            android:textColor="@color/color_group_text"
            android:textSize="@dimen/sp_18"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/selector_group_infrared"
            android:paddingTop="@dimen/dp_5"
            />
    </RadioGroup>
</LinearLayout>