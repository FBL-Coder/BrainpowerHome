<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_weight="1"
        android:background="#eee">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textColor="@color/color_000"
            android:text="模块名称 :" />

        <EditText
            android:id="@+id/work_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/color_E9573F"
            android:textColorHint="@color/color_000"
            android:background="#eee"
            android:gravity="center_vertical"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_weight="1"
        android:background="#eee">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textColor="@color/color_000"
            android:text="模块账号 :" />

        <TextView
            android:id="@+id/work_devUnitID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_weight="1"
        android:background="#eee">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textColor="@color/color_000"
            android:text="模块密码 :" />

        <EditText
            android:id="@+id/work_devUnitPass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/color_E9573F"
            android:textColorHint="@color/color_000"
            android:background="#eee"
            android:inputType="number"
            android:gravity="center_vertical"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_weight="1"
        android:background="#eee">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textColor="@color/color_000"
            android:text="I P 地 址 :" />

        <EditText
            android:id="@+id/work_IpAddr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/color_E9573F"
            android:textColorHint="@color/color_000"
            android:background="#eee"
            android:inputType="number"
            android:gravity="center_vertical"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_weight="1"
        android:background="#eee">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textColor="@color/color_000"
            android:text="子网掩码 :" />

        <EditText
            android:id="@+id/work_SubMask"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="number"
            android:textColor="@color/color_E9573F"
            android:textColorHint="@color/color_000"
            android:background="#eee"
            android:gravity="center_vertical"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_weight="1"
        android:background="#eee">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textColor="@color/color_000"
            android:text="默认网关 :" />

        <EditText
            android:id="@+id/work_GateWay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="number"
            android:textColor="@color/color_E9573F"
            android:textColorHint="@color/color_000"
            android:background="#eee"
            android:gravity="center_vertical"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_weight="1"
        android:background="#eee">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textColor="@color/color_000"
            android:gravity="center"
            android:text="服务器地址 :" />

        <EditText
            android:id="@+id/work_centerServ"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/color_E9573F"
            android:textColorHint="@color/color_000"
            android:background="#eee"
            android:inputType="number"
            android:gravity="center_vertical"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_weight="1"
        android:background="#eee">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textColor="@color/color_000"
            android:gravity="center"
            android:text="房间编号 :" />

        <TextView
            android:id="@+id/work_roomNum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_weight="1"
        android:background="#eee">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textColor="@color/color_000"
            android:gravity="center"
            android:text="网卡地址 :" />

        <TextView
            android:id="@+id/work_macAddr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="number"
            android:gravity="center_vertical"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_weight="1"
        android:background="#eee">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textColor="@color/color_000"
            android:gravity="center"
            android:text="动 态 I P :" />

        <RadioGroup
            android:id="@+id/y_n_Group"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="@dimen/dp_50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/work_yes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_000"
                android:gravity="center"
                android:button="@null"
                android:drawableLeft="@drawable/selector_check"
                android:text="   是" />
            <View
                android:layout_width="@dimen/dp_0"
                android:layout_weight="0.8"
                android:layout_height="match_parent"/>

            <RadioButton
                android:id="@+id/work_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_000"
                android:drawableLeft="@drawable/selector_check"
                android:gravity="center"
                android:button="@null"
                android:text="   否" />

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/dp_100"
        android:paddingRight="@dimen/dp_100">

        <TextView
            android:id="@+id/work_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_2"
            android:layout_weight="1"
            android:background="@drawable/save_click_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="保 存"
            android:textColor="#fff"
            android:textSize="@dimen/sp_18" />

    </LinearLayout>

</LinearLayout>