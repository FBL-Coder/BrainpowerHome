<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bj_group3">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="0.7"
        android:background="@color/color_08143F"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/RecyclerView_groupSet"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:scrollbars="none">

        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/save"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@null"
            android:clickable="true"
            android:layout_gravity="center_vertical"
            android:drawableTop="@drawable/save_group3"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="保存"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/sp_20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_weight="0.5"
        android:background="#4c000000"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="match_parent"
            android:text="触发器名称  "
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/color_fff"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_weight="1"
            android:textSize="@dimen/sp_18"
            android:textColorHint="@color/white1"
            android:background="@color/color_10AEFF"
            android:gravity="center"
            android:textColor="@color/color_fff"
            android:padding="@dimen/dp_5" />


        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:text="启用  "
            android:gravity="center"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/color_fff"
             />

        <TextView
            android:id="@+id/enabled"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="0.5"
            android:background="@drawable/save_click_selector"
            android:clickable="true"
            android:layout_margin="@dimen/dp_10"
            android:drawableRight="@drawable/more"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingRight="@dimen/dp_5"
            android:text="禁用"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:text="是否上报服务器"
            android:textColor="@color/color_fff"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:textSize="@dimen/sp_18"
            />

        <TextView
            android:id="@+id/event_way"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:layout_marginLeft="-10dp"
            android:background="@drawable/save_click_selector"
            android:clickable="true"
            android:text="否"
            android:drawableRight="@drawable/more"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="@dimen/dp_5"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/add_dev_groupSet"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="0.8"
            android:background="@color/color_8AB928"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center"
            android:textSize="@dimen/sp_20"
            android:text="添加设备"
            android:textColor="@color/white1"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="3">
        <GridView
            android:id="@+id/gridView_groupSet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:clipToPadding="true"
            android:numColumns="3"
            android:horizontalSpacing="@dimen/dp_10"
            android:verticalSpacing="@dimen/dp_10"
            android:scrollbars="none" />

        <LinearLayout
            android:id="@+id/add_dev_Layout_ll"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@color/color_55F6F7F7"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:text="未添加设备列表"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_18"
                android:id="@+id/textView7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="设备房间"
                    android:textColor="@color/color_fff"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:id="@+id/tv_equipment_parlour"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/save_click_selector"
                    android:gravity="center"
                    android:drawableRight="@drawable/more"
                    android:paddingRight="@dimen/dp_15"
                    android:textColor="@color/color_fff"
                    android:textSize="@dimen/sp_18" />
            </LinearLayout>

            <ListView
                android:id="@+id/equipment_loyout_lv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1">
            </ListView>

            <TextView
                android:id="@+id/equipment_close"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_alignParentBottom="true"
                android:background="@drawable/save_click_selector"
                android:text="关闭"
                android:gravity="center"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_18" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
