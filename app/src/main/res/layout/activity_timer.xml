<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"
        android:background="@color/color_08143F"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/RecyclerView_timer"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:scrollbars="none">

        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/save"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@null"
            android:clickable="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:drawableTop="@drawable/save_group3"
            android:padding="@dimen/dp_5"
            android:text="保存"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="6"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorCC"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1.2"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                >
                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="定时器名称"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_16" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:background="@drawable/select_white_no"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="@color/color_000"
                    android:textColorHint="@color/color_565656"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5"
                android:orientation="vertical"
                >
            <TextView
                android:id="@+id/enabled"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/dp_20"
                android:background="@drawable/select_white"
                android:clickable="true"
                android:drawableRight="@drawable/more_black"
                android:gravity="center"
                android:textColor="@color/color_000"
                android:textSize="@dimen/sp_16" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5"
                android:orientation="vertical"
                >
            <TextView
                android:id="@+id/time_week"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/dp_20"
                android:background="@drawable/select_white"
                android:clickable="true"
                android:drawableRight="@drawable/more_black"
                android:gravity="center"
                android:textColor="@color/color_000"
                android:textSize="@dimen/sp_16" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="周重复"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/week_repeat"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:background="@drawable/select_white"
                    android:drawableRight="@drawable/more_black"
                    android:clickable="true"
                    android:paddingRight="@dimen/dp_5"
                    android:gravity="center"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="是否全网"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/all_network"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:background="@drawable/select_white"
                    android:drawableRight="@drawable/more_black"
                    android:clickable="true"
                    android:paddingRight="@dimen/dp_5"
                    android:gravity="center"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="开始时间（日）"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/time_start"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1.2"
                    android:background="@drawable/select_white_no"
                    android:padding="@dimen/dp_2"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="结束时间（日）"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/time_end"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1.2"
                    android:background="@drawable/select_white_no"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="@dimen/dp_2"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1.2"
                android:paddingLeft="@dimen/dp_50"
                android:paddingRight="@dimen/dp_50"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:orientation="vertical"
                >
            <TextView
                android:id="@+id/add_dev_timer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/select_white_no"
                android:gravity="center"
                android:text="添加设备"
                android:textColor="@color/color_000"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:orientation="vertical"
            android:background="@drawable/bj_group3"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="3">

                <GridView
                    android:id="@+id/gridView_timer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_10"
                    android:clipToPadding="true"
                    android:horizontalSpacing="@dimen/dp_10"
                    android:numColumns="3"
                    android:scrollbars="none"
                    android:verticalSpacing="@dimen/dp_10" />
                <!--android:background="@color/color_55F6F7F7"
                android:background="@color/color_08143F"
                -->
                <LinearLayout
                    android:id="@+id/add_dev_Layout_ll"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:background="@drawable/bg_viewpager"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_25"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_10"
                        android:text="未添加设备列表"
                        android:textColor="@color/color_fff"
                        android:textSize="@dimen/sp_18" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:text="设备房间"
                            android:textColor="@color/color_fff"
                            android:textSize="@dimen/sp_18" />

                        <TextView
                            android:id="@+id/tv_equipment_parlour"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:background="@drawable/save_click_selector"
                            android:drawableRight="@drawable/more"
                            android:gravity="center"
                            android:paddingRight="@dimen/dp_15"
                            android:textColor="@color/color_fff"
                            android:textSize="@dimen/sp_18" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/equipment_loyout_lv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1"></ListView>

                    <TextView
                        android:id="@+id/equipment_close"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_35"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/save_click_selector"
                        android:gravity="center"
                        android:text="关闭"
                        android:textColor="@color/color_fff"
                        android:textSize="@dimen/sp_18" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
