<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1.1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/equip_input"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:background="@drawable/save_click_selector"
            android:clickable="true"
            android:drawableRight="@drawable/more"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_5"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="horizontal">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/RecyclerView"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@color/color_60A7D5_null"
                android:scrollbars="none">

            </android.support.v7.widget.RecyclerView>

            <Button
                android:id="@+id/input_save"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="0.5"
                android:background="@drawable/selector_network_blue_sure"
                android:clickable="true"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="保存"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="6.5"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/input_listView_room"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_60A7D5_null"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical"
            >
            <RadioGroup
                android:id="@+id/radioGroup_sceneSet"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="0.9"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/light"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_main_radiobutton_bg"
                    android:button="@null"
                    android:drawableTop="@drawable/dpx"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_12"
                    android:text="灯光"
                    android:textColor="@color/color_fff" />

                <RadioButton
                    android:id="@+id/curtain"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_main_radiobutton_bg"
                    android:button="@null"
                    android:drawableTop="@drawable/clx"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_12"
                    android:text="窗帘"
                    android:textColor="@color/color_fff" />

                <RadioButton
                    android:id="@+id/appliance"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_main_radiobutton_bg"
                    android:button="@null"
                    android:drawableTop="@drawable/jdx"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_12"
                    android:text="家电"
                    android:textColor="@color/color_fff" />

                <RadioButton
                    android:id="@+id/socket"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_main_radiobutton_bg"
                    android:button="@null"
                    android:drawableTop="@drawable/czx"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_12"
                    android:text="插座"
                    android:textColor="@color/color_fff" />

                <RadioButton
                    android:id="@+id/door"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_main_radiobutton_bg"
                    android:button="@null"
                    android:drawableTop="@drawable/msx"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_12"
                    android:text="门锁"
                    android:textColor="@color/color_fff" />

                <RadioButton
                    android:id="@+id/safety"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_main_radiobutton_bg"
                    android:button="@null"
                    android:drawableTop="@drawable/fhx"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_12"
                    android:text="安防"
                    android:textColor="@color/color_fff" />

                <RadioButton
                    android:id="@+id/control"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_main_radiobutton_bg"
                    android:button="@null"
                    android:drawableTop="@drawable/jkx"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_12"
                    android:text="监控"
                    android:textColor="@color/color_fff" />
            </RadioGroup>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="5"
                android:orientation="vertical"
                android:background="@drawable/bg_viewpager"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="0.5"
                    android:background="#002c4c"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="是否打开‘只看关联设备’模式"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp_16"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textColor="@color/white1"/>

                    <ImageView
                        android:layout_margin="@dimen/dp_5"
                        android:id="@+id/input_choose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/off" />
                </RelativeLayout>
                <FrameLayout
                    android:id="@+id/home"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="5"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>