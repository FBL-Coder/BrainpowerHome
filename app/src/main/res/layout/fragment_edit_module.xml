<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:background="@color/color_48464c"
            android:paddingBottom="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_15">

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="选择面板"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/equip_input"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_weight="3"
                android:background="@drawable/select_black"
                android:clickable="true"
                android:drawableRight="@drawable/more_white"
                android:gravity="center"
                android:paddingRight="@dimen/dp_8"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_16" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="5"
            android:background="@color/colorCC"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="0.6"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_30"
                android:paddingTop="@dimen/dp_15">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:text="面板属性"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="名      称"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_16" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1.4"
                    android:background="@drawable/select_white_no"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="@dimen/dp_2"
                    android:textColor="@color/color_000"
                    android:textColorHint="@color/color_565656"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="所属房间"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/room"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1.4"
                    android:background="@drawable/select_white"
                    android:clickable="true"
                    android:drawableRight="@drawable/more_black"
                    android:gravity="center"
                    android:paddingRight="@dimen/dp_15"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="按键数目"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/count"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1.4"
                    android:background="@drawable/select_white"
                    android:drawableRight="@drawable/more_black"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingRight="@dimen/dp_15"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>
            <!-- android:digits="12345670"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingTop="@dimen/dp_10">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="按键形式"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/style"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1.4"
                    android:background="@drawable/select_white"
                    android:clickable="true"
                    android:drawableRight="@drawable/more_black"
                    android:gravity="center"
                    android:paddingRight="@dimen/dp_14"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingTop="@dimen/dp_10">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="按键背光"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/backLight"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1.4"
                    android:background="@drawable/select_white"
                    android:clickable="true"
                    android:drawableRight="@drawable/more_black"
                    android:gravity="center"
                    android:paddingRight="@dimen/dp_14"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_50"
                android:paddingRight="@dimen/dp_50"
                android:paddingTop="@dimen/dp_10">

                <TextView
                    android:id="@+id/save"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1.2"
                    android:background="@drawable/select_white_no"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="@dimen/dp_2"
                    android:text="保存"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="2.3"
        android:background="@drawable/bj_group3"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:paddingTop="@dimen/dp_10">

        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rect_gray10"
            android:clipToPadding="true"
            android:horizontalSpacing="@dimen/dp_10"
            android:numColumns="3"
            android:padding="@dimen/dp_10"
            android:scrollbars="none"
            android:verticalSpacing="@dimen/dp_10" />

    </LinearLayout>
</LinearLayout>