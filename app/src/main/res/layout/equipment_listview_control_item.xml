<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="center_vertical"
    android:padding="@dimen/dp_5"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <EditText
            android:id="@+id/name"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:background="@drawable/select_white_no"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/color_000"
            android:textColorHint="@color/color_000"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:paddingLeft="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="设备类型"
            android:textColor="@color/color_000"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/devType"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:background="@drawable/select_white_no"
            android:clickable="true"
            android:gravity="center"
            android:paddingRight="@dimen/dp_5"
            android:textColor="@color/color_000"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:paddingLeft="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="设备房间"
            android:textColor="@color/color_000"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/devRoom"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:background="@drawable/select_white"
            android:clickable="true"
            android:drawableRight="@drawable/more_black"
            android:gravity="center"
            android:paddingRight="@dimen/dp_3"
            android:textColor="@color/color_000"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="3.5"
        android:paddingLeft="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="设备通道"
            android:textColor="@color/color_000"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/devGallery"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="2"
            android:background="@drawable/select_white"
            android:clickable="true"
            android:drawableRight="@drawable/more_black"
            android:gravity="center"
            android:paddingRight="@dimen/dp_15"
            android:textColor="@color/color_000"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/dp_5"
        >

        <TextView
            android:id="@+id/text"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:background="@drawable/select_white_no"
            android:clickable="true"
            android:gravity="center"
            android:text="测试"
            android:textColor="@color/color_000"
            android:textColorHint="@color/color_000"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/dp_5"
        >
        <TextView
            android:id="@+id/save"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:background="@drawable/select_white_no"
            android:clickable="true"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/color_000"
            android:textColorHint="@color/color_000"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/dp_5"
        >
        <TextView
            android:id="@+id/delete"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:background="@drawable/select_white_no"
            android:clickable="true"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/color_000"
            android:textColorHint="@color/color_000"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>


</LinearLayout>