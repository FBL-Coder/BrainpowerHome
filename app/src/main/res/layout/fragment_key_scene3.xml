<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"
        android:background="@color/color_48464c"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/RecyclerView"
            android:layout_width="@dimen/dp_0"
            android:background="@drawable/selector_scene_bg2"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:scrollbars="none" />

        <Button
            android:id="@+id/input_save"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_weight="0.5"
            android:background="@null"
            android:clickable="true"
            android:drawablePadding="-10dp"
            android:drawableTop="@drawable/save_group3"
            android:paddingTop="@dimen/dp_5"
            android:text="保存"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@color/colorCC"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/RecyclerView_equip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:scrollbars="none"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1.2"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:padding="@dimen/dp_5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="只显示选中"
                        android:textColor="@color/color_000"
                        android:textSize="@dimen/sp_16" />

                    <ImageView
                        android:id="@+id/input_choose"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/dp_5"
                        android:layout_weight="1"
                        android:src="@drawable/off" />
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="4"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/rect_gray7"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10"
                    >


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:lineSpacingMultiplier="1.5"
                        android:padding="@dimen/dp_2"
                        android:text="注：1、选择情景模式\n        2、选择开关面板\n        3、选择对应功能"
                        android:textColor="@color/color_000"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@drawable/bj_group3"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_35"
            android:paddingRight="@dimen/dp_35"
            android:paddingTop="@dimen/dp_15">


            <FrameLayout
                android:id="@+id/home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rect_gray10" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>