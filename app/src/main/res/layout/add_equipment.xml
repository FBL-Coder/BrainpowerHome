<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ListView
        android:id="@+id/safety_listView"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:background="@color/color_60A7D5_null"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
        <RadioGroup
            android:id="@+id/radioGroup_sceneSet"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/light"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_main_radiobutton_bg"
                android:button="@null"
                android:drawableTop="@drawable/dpx"
                android:gravity="center"
                android:paddingTop="@dimen/dp_12"
                android:text="灯光"
                android:textColor="@color/color_fff" />

            <RadioButton
                android:id="@+id/curtain"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_main_radiobutton_bg"
                android:button="@null"
                android:drawableTop="@drawable/clx"
                android:gravity="center"
                android:paddingTop="@dimen/dp_12"
                android:text="窗帘"
                android:textColor="@color/color_fff" />

            <RadioButton
                android:id="@+id/appliance"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_main_radiobutton_bg"
                android:button="@null"
                android:drawableTop="@drawable/jdx"
                android:gravity="center"
                android:paddingTop="@dimen/dp_12"
                android:text="家电"
                android:textColor="@color/color_fff" />

            <RadioButton
                android:id="@+id/socket"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_main_radiobutton_bg"
                android:button="@null"
                android:drawableTop="@drawable/czx"
                android:gravity="center"
                android:paddingTop="@dimen/dp_12"
                android:text="插座"
                android:textColor="@color/color_fff" />

            <RadioButton
                android:id="@+id/door"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_main_radiobutton_bg"
                android:button="@null"
                android:drawableTop="@drawable/msx"
                android:gravity="center"
                android:paddingTop="@dimen/dp_12"
                android:text="门锁"
                android:textColor="@color/color_fff" />
        </RadioGroup>
            <Button
                android:id="@+id/confirm"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_weight="0.7"
                android:background="@drawable/selector_network_blue_sure"
                android:clickable="true"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="确定"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_18" />

        </LinearLayout>
        <FrameLayout
            android:id="@+id/home_safety"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="6"
            android:background="@drawable/bg_viewpager" />

    </LinearLayout>
</LinearLayout>