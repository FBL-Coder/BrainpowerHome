<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"
        android:background="@drawable/selector_user"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="@dimen/dp_10"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:background="@color/color_2F2D2E"
            android:gravity="center"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/sp_20"
            />
        <TextView
            android:id="@+id/edit"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/sp_18"
            android:text="编辑"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="8"
        android:orientation="horizontal"
        android:background="@drawable/bg_viewpager"
        >
        <GridView
            android:id="@+id/gridView_user"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:clipToPadding="true"
            android:numColumns="3"
            android:horizontalSpacing="@dimen/dp_10"
            android:verticalSpacing="@dimen/dp_10"
            android:scrollbars="none"
            android:layout_margin="@dimen/dp_10"
            />

        <LinearLayout
            android:id="@+id/add_equipment_Layout_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@color/color_3F4D68"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:text="未添加设备列表"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="设备房间"
                    android:textColor="@color/color_fff"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:id="@+id/tv_equipment_parlour"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/save_click_selector"
                    android:gravity="center"
                    android:drawableRight="@drawable/more"
                    android:text="客厅"
                    android:paddingRight="@dimen/dp_15"
                    android:textColor="@color/color_fff"
                    android:textSize="@dimen/sp_18" />
            </LinearLayout>

            <ListView
                android:id="@+id/equipment_loyout_lv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1">
            </ListView>

            <TextView
                android:id="@+id/equipment_close"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_alignParentBottom="true"
                android:background="@drawable/save_click_selector"
                android:text="关闭"
                android:gravity="center"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/sp_18" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>