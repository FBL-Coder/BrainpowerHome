<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_920"
    android:layout_height="wrap_content"
    android:background="@color/color_E3E8F2">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <ImageView
            android:id="@+id/parlour_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            android:src="@drawable/jt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:src="@drawable/selector_curtain_allopen"
                android:padding="@dimen/dp_10"
                android:background="@drawable/selector_parlour_bg" />

            <ImageView
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:src="@drawable/selector_curtain_halfopen"
                android:padding="@dimen/dp_10"
                android:background="@drawable/selector_parlour_bg" />

            <ImageView
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_weight="1"
                android:src="@drawable/selector_curtain_allclose"
                android:padding="@dimen/dp_10"
                android:background="@drawable/selector_parlour_bg" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="全开"
                android:textColor="@color/color_000"
                android:textSize="@dimen/sp_20"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_40"
                />
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="半开"
                android:textColor="@color/color_000"
                android:textSize="@dimen/sp_20"
                android:gravity="center"
                />
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="全关"
                android:textColor="@color/color_000"
                android:textSize="@dimen/sp_20"
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_40"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120">

        </LinearLayout>
    </LinearLayout>

</ScrollView>