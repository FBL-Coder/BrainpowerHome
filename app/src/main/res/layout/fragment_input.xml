<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_33ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/color_00000000"
        >
        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@drawable/save_click_selector"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:text="返回"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/sp_22" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@color/color_00000000"
            android:drawablePadding="@dimen/dp_20"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/back"
            android:paddingLeft="@dimen/dp_30"
            android:text="已有配置列表"
            android:textColor="@color/white1"
            android:textSize="@dimen/sp_22" />

        <TextView
            android:id="@+id/save_equipment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/save_click_selector"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:text="保存"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/sp_22" />

        <TextView
            android:id="@+id/del_equipment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_toLeftOf="@id/save_equipment"
            android:background="@drawable/del_click_selector"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:text="删除"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/sp_22" />

        <TextView
            android:id="@+id/ref_equipment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_toLeftOf="@id/del_equipment"
            android:background="@drawable/ref_click_selector"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:text="刷新"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/sp_22" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="6">
        <cn.etsoft.smarthome.widget.SwipeListView
            android:id="@+id/equipment_out_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:divider="@color/color_00000000"
            android:dividerHeight="@dimen/dp_10" />
        <ImageView
            android:id="@+id/input_out_iv_nodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:src="@drawable/nodata"/>
    </RelativeLayout>


</LinearLayout>