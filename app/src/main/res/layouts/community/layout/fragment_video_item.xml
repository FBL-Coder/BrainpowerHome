<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/video_item_monit_bg"
            android:scaleType="centerInside"
            android:src="@drawable/video_item_monit" />

        <TextView
            android:id="@+id/tv_devName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/text666"
            android:textSize="@dimen/main_textSize14" />

        <TextView
            android:id="@+id/btn_open"
            android:layout_width="60dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/video_item_open_bg"
            android:gravity="center"
            android:text="开门"
            android:textColor="@color/title_text" />
    </RelativeLayout>

</RelativeLayout>
