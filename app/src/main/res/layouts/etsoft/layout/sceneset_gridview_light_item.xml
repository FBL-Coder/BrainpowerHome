<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:rsv="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dp_20">


    <TextView
        android:id="@+id/SceneSet_DridView_Item_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="asdasdad"
        android:textColor="@color/blue"
        android:textSize="@dimen/dp_20" />

    <ImageView
        android:id="@+id/SceneSet_DridView_Item_IV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/SceneSet_DridView_Item_Name"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:src="@drawable/ic_launcher" />


    <ImageView
        android:id="@+id/SceneSet_DridView_Item_Select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        />
    <com.github.channguyen.rsv.RangeSliderView
        android:id="@+id/SceneSet_DridView_Item_Slide"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/SceneSet_DridView_Item_IV"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        rsv:filledColor="#1A5F77"
        />

</RelativeLayout>
