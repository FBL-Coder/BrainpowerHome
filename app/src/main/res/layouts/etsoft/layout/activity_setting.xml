<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        >

        <RadioGroup
            android:id="@+id/setting_radiogroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RadioButton
                android:id="@+id/setting_netmodule_rbt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:button="@null"
                android:drawableLeft="@drawable/ic_launcher"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="@drawable/selector_setting_radiobutton_bg"
                android:gravity="center"
                android:padding="@dimen/dp_20"
                android:text="联网模块"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_20" />

            <RadioButton
                android:id="@+id/setting_longip_rbt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:button="@null"
                android:drawableLeft="@drawable/ic_launcher"
                android:background="@drawable/selector_setting_radiobutton_bg"
                android:gravity="center"
                android:padding="@dimen/dp_20"
                android:text="远程IP"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_20" />

            <RadioButton
                android:id="@+id/setting_advanced_rbt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:button="@null"
                android:drawableLeft="@drawable/ic_launcher"
                android:background="@drawable/selector_setting_radiobutton_bg"
                android:gravity="center"
                android:padding="@dimen/dp_20"
                android:text="高级设置"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_20" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_linearlayout_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical">
    </LinearLayout>

</LinearLayout>
