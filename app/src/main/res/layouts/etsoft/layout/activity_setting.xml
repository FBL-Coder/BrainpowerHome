<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1">

            <cn.etsoft.smarthome.View.LinearLayout.BamLinearLayout
                android:id="@+id/setting_network"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/blue"
                android:orientation="vertical"
                android:scaleType="fitXY">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1.5"
                    android:paddingLeft="@dimen/dp_40"
                    android:paddingRight="@dimen/dp_40"
                    android:paddingTop="@dimen/sp_40"
                    android:src="@drawable/set_newwork" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="联网模块"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_30" />
            </cn.etsoft.smarthome.View.LinearLayout.BamLinearLayout>

            <View
                android:layout_width="@dimen/dp_10"
                android:layout_height="match_parent" />

            <cn.etsoft.smarthome.View.LinearLayout.BamLinearLayout
                android:id="@+id/setting_group"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/blue"
                android:orientation="vertical"
                android:scaleType="fitXY">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1.5"
                    android:paddingLeft="@dimen/dp_40"
                    android:paddingRight="@dimen/dp_40"
                    android:paddingTop="@dimen/sp_40"
                    android:src="@drawable/set_control" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="组合设置"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_30" />
            </cn.etsoft.smarthome.View.LinearLayout.BamLinearLayout>

            <View
                android:layout_width="@dimen/dp_10"
                android:layout_height="match_parent" />

            <cn.etsoft.smarthome.View.LinearLayout.BamLinearLayout
                android:id="@+id/setting_devinfo"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/blue"
                android:orientation="vertical"
                android:scaleType="fitXY">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1.5"
                    android:paddingLeft="@dimen/dp_40"
                    android:paddingRight="@dimen/dp_40"
                    android:paddingTop="@dimen/sp_40"
                    android:src="@drawable/set_devinfo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="设备信息"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_30" />
            </cn.etsoft.smarthome.View.LinearLayout.BamLinearLayout>

            <View
                android:layout_width="@dimen/dp_10"
                android:layout_height="match_parent" />

            <cn.etsoft.smarthome.View.LinearLayout.BamLinearLayout
                android:id="@+id/setting_scene"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/blue"
                android:orientation="vertical"
                android:scaleType="fitXY">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1.5"
                    android:paddingLeft="@dimen/dp_40"
                    android:paddingRight="@dimen/dp_40"
                    android:paddingTop="@dimen/sp_40"
                    android:src="@drawable/anjian_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="情景设置"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_30" />

            </cn.etsoft.smarthome.View.LinearLayout.BamLinearLayout>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <cn.etsoft.smarthome.View.LinearLayout.BamLinearLayout
                android:id="@+id/setting_safety"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/blue"
                android:orientation="vertical"
                android:scaleType="fitXY">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1.5"
                    android:paddingLeft="@dimen/dp_40"
                    android:paddingRight="@dimen/dp_40"
                    android:paddingTop="@dimen/sp_40"
                    android:src="@drawable/set_safety" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="安防设置"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_30" />
            </cn.etsoft.smarthome.View.LinearLayout.BamLinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1">


            <cn.etsoft.smarthome.View.LinearLayout.BamLinearLayout
                android:id="@+id/setting_timer"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/blue"
                android:orientation="vertical"
                android:scaleType="fitXY">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1.5"
                    android:paddingLeft="@dimen/dp_40"
                    android:paddingRight="@dimen/dp_40"
                    android:paddingTop="@dimen/sp_40"
                    android:src="@drawable/set_timer" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="定时设置"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_30" />
            </cn.etsoft.smarthome.View.LinearLayout.BamLinearLayout>

            <View
                android:layout_width="@dimen/dp_10"
                android:layout_height="match_parent" />

            <cn.etsoft.smarthome.View.LinearLayout.BamLinearLayout
                android:id="@+id/setting_condition"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/blue"
                android:orientation="vertical"
                android:scaleType="fitXY">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1.5"
                    android:paddingLeft="@dimen/dp_40"
                    android:paddingRight="@dimen/dp_40"
                    android:paddingTop="@dimen/sp_40"
                    android:src="@drawable/set_condition" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="环境事件"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_30" />
            </cn.etsoft.smarthome.View.LinearLayout.BamLinearLayout>

            <View
                android:layout_width="@dimen/dp_10"
                android:layout_height="match_parent" />

            <cn.etsoft.smarthome.View.LinearLayout.BamLinearLayout
                android:id="@+id/setting_dev_keys"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/blue"
                android:orientation="vertical"
                android:scaleType="fitXY">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1.5"
                    android:paddingLeft="@dimen/dp_40"
                    android:paddingRight="@dimen/dp_40"
                    android:paddingTop="@dimen/sp_40"
                    android:src="@drawable/anjian_dev" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="设备-按键"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_30" />
            </cn.etsoft.smarthome.View.LinearLayout.BamLinearLayout>

            <View
                android:layout_width="@dimen/dp_10"
                android:layout_height="match_parent" />

            <cn.etsoft.smarthome.View.LinearLayout.BamLinearLayout
                android:id="@+id/setting_key_scenes"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/blue"
                android:orientation="vertical"
                android:scaleType="fitXY">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1.5"
                    android:paddingLeft="@dimen/dp_40"
                    android:paddingRight="@dimen/dp_40"
                    android:paddingTop="@dimen/sp_40"
                    android:src="@drawable/anjian_qingjing" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="情景-按键"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_30" />
            </cn.etsoft.smarthome.View.LinearLayout.BamLinearLayout>

            <View
                android:layout_width="@dimen/dp_10"
                android:layout_height="match_parent" />

            <cn.etsoft.smarthome.View.LinearLayout.BamLinearLayout
                android:id="@+id/setting_key_devs"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/blue"
                android:orientation="vertical"
                android:scaleType="fitXY">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1.5"
                    android:paddingLeft="@dimen/dp_40"
                    android:paddingRight="@dimen/dp_40"
                    android:paddingTop="@dimen/sp_40"
                    android:src="@drawable/dev_anjain" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="按键-设备"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_30" />
            </cn.etsoft.smarthome.View.LinearLayout.BamLinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
