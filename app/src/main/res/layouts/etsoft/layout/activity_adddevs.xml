<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_200"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/sp_20">
        <!--用户直接可视界面-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginLeft="@dimen/sp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:text="添加设备"
            android:textColor="@color/blue"
            android:textSize="@dimen/sp_24" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/blue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="设备名称 "
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_20" />

                <EditText
                    android:id="@+id/AddDev_Name"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="请输入名称"
                    android:padding="@dimen/dp_10"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_20" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="设备所属输出饭 "
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_20" />

                <TextView
                    android:id="@+id/AddDev_OutBoard"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:text="点击选择输出板"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_20" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="设备所属房间 "
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_20" />

                <RelativeLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/AddDev_Room"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_40"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/dp_10"
                        android:text="点击选择房间 "
                        android:textColor="@color/color_000"
                        android:textSize="@dimen/sp_20" />

                    <EditText
                        android:id="@+id/AddDev_EditRoom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_40"
                        android:hint="请输入房间名"
                        android:textColor="@color/color_000"
                        android:textSize="@dimen/sp_20"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/AddDev_ShowInputRoom"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/input_edit_dev" />
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="设备类型 "
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_20" />

                <TextView
                    android:id="@+id/AddDev_Type"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:text="点击选择类型"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_20" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="设备通道 "
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_20" />

                <TextView
                    android:id="@+id/AddDev_Way"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:text="点击选择通道"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/sp_20" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/AddDev_Save"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="保存"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sp_30" />

                <TextView
                    android:id="@+id/AddDev_cancle"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sp_30" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
