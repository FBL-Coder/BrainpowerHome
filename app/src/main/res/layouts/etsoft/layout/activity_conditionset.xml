<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/set"
                android:paddingLeft="@dimen/dp_150">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="环境设置"
                    android:textColor="@color/white1"
                    android:textSize="@dimen/dp_20"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ConditionSet_Save_Btn"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="保存"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/condition_back"
                    android:layout_width="@dimen/dp_40"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:padding="@dimen/dp_10"
                    android:layout_height="@dimen/dp_50"
                    android:src="@drawable/select_back_system" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_250">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@drawable/set_button_bg"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:text="名称："
                            android:textColor="@color/main_white3"
                            android:textSize="@dimen/sp_16" />

                        <EditText
                            android:id="@+id/ConditionSet_Name"
                            android:layout_width="@dimen/dp_150"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:hint="无"
                            android:background="@null"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@drawable/set_button_bg"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="触发值"
                            android:textColor="@color/main_white3"
                            android:textSize="@dimen/sp_16" />

                        <EditText
                            android:id="@+id/ConditionSet_ChuFaZhi"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:minWidth="@dimen/dp_50"
                            android:background="@null"
                            android:textSize="@dimen/sp_16"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white1"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@drawable/set_button_bg"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="触发方式"
                            android:textColor="@color/main_white3"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/ConditionSet_Way"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="@dimen/dp_10"
                            android:text="大于阀值"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@drawable/set_button_bg"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:text="触发类别"
                            android:textColor="@color/main_white3"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/ConditionSet_Type"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_20"
                            android:text="温度触发"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_250">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:gravity="center"
                        android:text="启用"
                        android:textColor="@color/main_white3"
                        android:textSize="@dimen/sp_16" />

                    <ImageView
                        android:id="@+id/ConditionSet_ShiNeng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:src="@drawable/show_off" />


                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_250">

            <TextView
                android:id="@+id/null_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/dp_20"
                android:text="没有数据"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20"
                android:textStyle="italic" />

            <GridView
                android:id="@+id/ConditionSet_GirdView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:horizontalSpacing="@dimen/dp_10"
                android:numColumns="2"
                android:padding="@dimen/dp_10"
                android:verticalSpacing="@dimen/dp_10" />

            <ImageView
                android:id="@+id/ConditionSet_AddDev"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:src="@drawable/add_white" />

        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="@dimen/dp_250"
        android:layout_height="match_parent">

        <cn.etsoft.smarthome.View.CircleMenu.CircleMenuLayout
            android:id="@+id/ConditionSet_CircleMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circlebg" />
    </FrameLayout>
</RelativeLayout>
