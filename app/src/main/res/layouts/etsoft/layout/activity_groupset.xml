<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color1FF1A2"
            android:paddingLeft="@dimen/dp_150">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名称："
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_18" />

                <EditText
                    android:id="@+id/GroupSet_Name"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:hint="无"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使能"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_18" />

                <ImageView
                    android:id="@+id/GroupSet_ShiNeng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:src="@mipmap/ic_launcher_round" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同步服务器"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_18" />

                <ImageView
                    android:id="@+id/GroupSet_SyncSever"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:src="@mipmap/ic_launcher_round" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="安防 : "
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:id="@+id/GroupSet_Safetys"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/red"
                    android:gravity="center"
                    android:minWidth="@dimen/dp_120"
                    android:text="点击选择防区"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:id="@+id/GroupSet_AddDevs"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/red"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:minWidth="@dimen/dp_80"
                    android:text="添加设备"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:id="@+id/GroupSet_Save_Btn"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="保存"
                    android:background="@color/red"
                    android:textSize="@dimen/dp_22" />
            </LinearLayout>
        </RelativeLayout>

        <GridView
            android:id="@+id/GroupSet_GirdView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2"
            android:layout_marginLeft="@dimen/dp_250"
            android:background="@color/Myblue" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="@dimen/dp_250"
        android:layout_height="match_parent">

        <cn.etsoft.smarthome.View.CircleMenu.CircleMenuLayout
            android:id="@+id/GroupSet_CircleMenu"
            android:layout_width="@dimen/dp_250"
            android:layout_height="match_parent" />
    </FrameLayout>
</RelativeLayout>
