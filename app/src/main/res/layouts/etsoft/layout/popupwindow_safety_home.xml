<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/color_EEFFFFFF"
    android:gravity="center"
    android:padding="@dimen/dp_10"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/colorCC"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="筛选条件"
        android:textColor="@color/color_000"
        android:textSize="@dimen/sp_22" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sp_15"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_100"
        android:paddingRight="@dimen/dp_100">

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="起始时间 "
            android:textColor="@color/color_000"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/Safety_Home_StartTime"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:hint="选择开始时间"
            android:padding="@dimen/dp_5"
            android:textColor="@color/color_000"
            android:textSize="@dimen/sp_20" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sp_15"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_100"
        android:paddingRight="@dimen/dp_100">

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="结束时间 "
            android:textColor="@color/color_000"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/Safety_Home_EndTime"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:hint="选择截止时间"
            android:padding="@dimen/dp_5"
            android:textColor="@color/color_000"
            android:textSize="@dimen/sp_20" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sp_15"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_100"
        android:paddingRight="@dimen/dp_100">

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="安防类型 "
            android:textColor="@color/color_000"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/Safety_Home_Select"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="选择安防类型"
            android:textStyle="bold"
            android:padding="@dimen/dp_5"
            android:textColor="@color/color_000"
            android:textSize="@dimen/sp_20" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Safety_Home_Ok"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="确 定"
            android:background="@color/colorCC"
            android:textColor="@color/color_000"
            android:textSize="@dimen/sp_26"
            android:layout_marginRight="@dimen/dp_10"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Safety_Home_Cancle"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="取 消"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@color/colorCC"
            android:textColor="@color/color_000"
            android:textSize="@dimen/sp_26"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
