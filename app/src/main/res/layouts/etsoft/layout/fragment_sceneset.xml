<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/select_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30">

        <ImageView
            android:id="@+id/SceneSet_IsSelectDev"
            android:layout_width="@dimen/dp_40"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_40"
            android:src="@drawable/show_off" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/SceneSet_IsSelectDev"
            android:gravity="center"
            android:text="是否只显示选中设备"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/null_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|bottom"
            android:padding="@dimen/dp_20"
            android:text="没有数据"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_26"
            android:textStyle="italic" />

        <GridView
            android:id="@+id/SceneSet_Fragment_GridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:horizontalSpacing="@dimen/dp_10"
            android:numColumns="2"
            android:padding="@dimen/dp_10"
            android:verticalSpacing="@dimen/dp_10" />
    </RelativeLayout>
</LinearLayout>
