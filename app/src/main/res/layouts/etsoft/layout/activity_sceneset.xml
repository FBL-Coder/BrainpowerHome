<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <cn.etsoft.smarthome.View.CircleMenu.CircleMenuLayout
        android:id="@+id/SceneSet_CircleMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/SceneSet_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/SceneSet_Scenes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_250"
                android:background="@color/blue"
                android:scrollbars="none" />

            <TextView
                android:id="@+id/SceneSet_Add_Btn"
                android:layout_width="@dimen/dp_70"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="@dimen/dp_22"
                android:text="新增"
                android:layout_marginRight="@dimen/dp_170"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/SceneSet_Test_Btn"
                android:layout_width="@dimen/dp_70"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="@dimen/dp_22"
                android:text="测试"
                android:layout_marginRight="@dimen/dp_100"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/SceneSet_Save_Btn"
                android:layout_width="@dimen/dp_70"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_30"
                android:textSize="@dimen/dp_22"
                android:text="保存" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/SceneSet_Info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="6"
            android:background="@color/red">
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
