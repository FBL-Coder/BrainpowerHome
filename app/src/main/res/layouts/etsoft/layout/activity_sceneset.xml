<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="@color/color_302f35" />

    <TextView
        android:id="@+id/null_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_250"
        android:gravity="right|bottom"
        android:padding="@dimen/dp_20"
        android:text="没有设备信息"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20"
        android:visibility="gone"
        android:textStyle="italic"/>

    <RelativeLayout
        android:id="@+id/SceneSet_Info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_250"
        android:layout_marginTop="@dimen/dp_70"
        android:background="@null" />

    <RelativeLayout
        android:layout_width="@dimen/dp_250"
        android:layout_height="match_parent">

        <cn.etsoft.smarthome.View.CircleMenu.CircleMenuLayout
            android:id="@+id/SceneSet_CircleMenu"
            android:layout_width="@dimen/dp_250"
            android:layout_height="match_parent"
            android:background="@drawable/circlebg" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_150"
        android:background="@null"
        android:gravity="right"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/SceneSet_Scenes"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:scrollbars="none" />

        <TextView
            android:id="@+id/SceneSet_Add_Btn"
            android:layout_width="@dimen/dp_70"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="新增"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_22"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/SceneSet_Test_Btn"
            android:layout_width="@dimen/dp_70"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="测试"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_22"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/SceneSet_Save_Btn"
            android:layout_width="@dimen/dp_70"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_22"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
