<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <RelativeLayout
        android:id="@+id/room_dev"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/menuup_bg"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_280"
            android:visibility="gone"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:padding="@dimen/dp_5"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/DevType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_400"
            android:gravity="center_vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:padding="@dimen/dp_5"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/RoomName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/SceneSet_Info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/room_dev"
        android:layout_marginLeft="@dimen/dp_250"
        android:background="@null" />

    <RelativeLayout
        android:id="@+id/CircleMenuLayout_RL"
        android:layout_width="@dimen/dp_250"
        android:layout_height="match_parent"
        android:gravity="center">

        <cn.etsoft.smarthome.View.CircleMenu.CircleMenuLayout
            android:id="@+id/SceneSet_CircleMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/circlebg" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/Control_Back"
        android:layout_width="@dimen/dp_40"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        android:padding="@dimen/dp_10"
        android:layout_height="@dimen/dp_50"
        android:src="@drawable/select_back_system" />
</RelativeLayout>
