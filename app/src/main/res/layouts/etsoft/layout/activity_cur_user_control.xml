<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_55222223"
   >


    <LinearLayout
        android:id="@+id/ll_air"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_200"
        android:layout_marginRight="@dimen/dp_200"
        android:background="@color/white1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Control_GridView_Item_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="asdasdad"
            android:padding="@dimen/dp_10"
            android:textColor="@color/viewfinder_laser"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/Control_GridView_Item_IV"
            android:layout_width="match_parent"
            android:padding="@dimen/dp_10"
            android:layout_height="@dimen/dp_80"
            android:layout_below="@id/Control_GridView_Item_Name"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/chuanglian_anjian_dev" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginBottom="@dimen/dp_20"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/open"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_5"
                android:src="@drawable/select_curtain_open_click" />

            <ImageView
                android:id="@+id/stop"
                android:layout_width="wrap_content"
                android:padding="@dimen/dp_5"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:src="@drawable/select_curtain_stop_click" />

            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_5"
                android:src="@drawable/select_curtain_close_click" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_2"
        android:layout_height="@dimen/dp_40"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll_air"
        android:background="@color/viewfinder_laser"/>

    <ImageView
        android:id="@+id/air_control_close"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll_air"
        android:layout_marginTop="@dimen/dp_30"
        android:src="@drawable/close"/>
</RelativeLayout>

