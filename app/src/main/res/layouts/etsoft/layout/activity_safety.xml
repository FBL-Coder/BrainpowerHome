<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menuup_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/dp_150">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="防区名称："
                        android:textColor="@color/main_white3"
                        android:textSize="@dimen/sp_16" />

                    <EditText
                        android:id="@+id/SafetySet_Name"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="无"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/sp_18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="使能"
                        android:textColor="@color/main_white3"
                        android:textSize="@dimen/sp_16" />

                    <ImageView
                        android:id="@+id/SafetySet_ShiNeng"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_10"
                        android:src="@drawable/checkbox1_unselect" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:text="全局布防状态"
                        android:textColor="@color/main_white3"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/SafetySet_Now"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:minWidth="@dimen/dp_80"
                        android:src="@mipmap/ic_launcher_round"
                        android:text="当前布放状态"
                        android:textSize="@dimen/sp_18" />

                    <TextView
                        android:id="@+id/SafetySet_Save_Btn"
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/dp_50"
                        android:layout_marginRight="@dimen/dp_20"
                        android:text="保存"
                        android:textSize="@dimen/dp_22" />

                    <TextView
                        android:id="@+id/SafetySet_DuiMa"
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_30"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:text="对码"
                        android:textSize="@dimen/dp_22" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/dp_200">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="类型 "
                        android:textColor="@color/main_white3"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/SafetySet_Type"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_30"
                        android:gravity="center"
                        android:minWidth="@dimen/dp_80"
                        android:text="点击选择安防类型"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关联情景"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textColor="@color/main_white3"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/SafetySet_Scene"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:minWidth="@dimen/dp_80"
                        android:src="@mipmap/ic_launcher_round"
                        android:text="点击选择关联情景"
                        android:textSize="@dimen/sp_18" />



                    <TextView
                        android:id="@+id/SafetySet_AddDev"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_50"
                        android:layout_marginRight="@dimen/dp_30"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="添加设备"
                        android:textSize="@dimen/dp_22" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_250">

            <TextView
                android:id="@+id/null_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|bottom"
                android:padding="@dimen/dp_20"
                android:text="没有数据"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20"
                android:textStyle="italic" />

            <GridView
                android:id="@+id/SafetySet_GirdView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:horizontalSpacing="@dimen/dp_10"
                android:numColumns="2"
                android:padding="@dimen/dp_10"
                android:verticalSpacing="@dimen/dp_10" />

        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="@dimen/dp_250"
        android:layout_height="match_parent">

        <cn.etsoft.smarthome.View.CircleMenu.CircleMenuLayout
            android:id="@+id/SafetySet_CircleMenu"
            android:layout_width="@dimen/dp_250"
            android:layout_height="match_parent"
            android:background="@drawable/circlebg" />
    </FrameLayout>
</RelativeLayout>
