<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/color1FF1A2"
            android:paddingLeft="@dimen/dp_150">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right">



                <TextView
                    android:id="@+id/SetAddDev_Back_Btn"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_22" />

                <TextView
                    android:id="@+id/SetAddDev_Save_Btn"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="保存"
                    android:textSize="@dimen/dp_22" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/SceneSet_Info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_250"
            android:background="@color/Myblue" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="@dimen/dp_250"
        android:layout_height="match_parent">

        <cn.etsoft.smarthome.View.CircleMenu.CircleMenuLayout
            android:id="@+id/SceneSet_CircleMenu"
            android:layout_width="@dimen/dp_250"
            android:layout_height="match_parent" />
    </FrameLayout>
</RelativeLayout>
