<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <cn.etsoft.smarthome.View.Custom_progress_dialog.AnimatedLoadingIndicator
        android:id="@+id/custom_progress"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"
        style="@style/AnimatedLoadingIndicatorView.Large"
        android:layout_centerInParent="true"
        app:indicatorName="cn.etsoft.smarthome.View.Custom_progress_dialog.ProgressBallMultipleIndicator"
        app:indicatorColor="@color/colorAccent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_progress"
        android:text="@string/loading"
        android:textStyle="bold"
        android:textSize="19sp"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
