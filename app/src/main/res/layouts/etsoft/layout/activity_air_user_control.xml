<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_55222223">

    <LinearLayout
        android:id="@+id/ll_air"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white1"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_200"
        android:layout_marginRight="@dimen/dp_200"
        android:padding="@dimen/sp_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="名称"
                    android:textColor="@color/text666"
                    android:textSize="@dimen/dp_10" />

                <TextView
                    android:id="@+id/air_name"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="你家空调我的"
                    android:textColor="@color/viewfinder_laser"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1.5" />

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="状态"
                    android:textColor="@color/text666"
                    android:textSize="@dimen/dp_10" />

                <ImageView
                    android:id="@+id/air_switch"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:src="@drawable/on"
                    android:textColor="@color/white1"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/air_set_temp_add"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="0.7"
                android:background="@drawable/set_button_bg"
                android:gravity="center"
                android:text="温度+"
                android:textColor="@color/white1"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/air_temp_now"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="25"
                android:textColor="@color/black1"
                android:textSize="@dimen/dp_16"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/air_set_temp_min"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:background="@drawable/set_button_bg"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="温度-"
                android:textColor="@color/white1"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/air_set_speed_add"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="0.7"
                android:background="@drawable/set_button_bg"
                android:gravity="center"
                android:text="风速+"
                android:padding="@dimen/dp_5"
                android:textColor="@color/white1"
                android:textSize="@dimen/sp_16" />


            <TextView
                android:id="@+id/air_speed"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="高风"
                android:textColor="@color/black1"
                android:textSize="@dimen/dp_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/air_set_speed_min"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="0.7"
                android:background="@drawable/set_button_bg"
                android:gravity="center"
                android:text="风速-"
                android:padding="@dimen/dp_5"
                android:textColor="@color/white1"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/air_set_mode_cool"
                android:layout_width="@dimen/dp_0"
                android:padding="@dimen/dp_5"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/set_button_bg"
                android:gravity="center"
                android:text="制冷"
                android:textColor="@color/white1"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/air_set_mode_hot"
                android:layout_width="@dimen/dp_0"
                android:padding="@dimen/dp_5"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/set_button_bg"
                android:gravity="center"
                android:text="制热"
                android:textColor="@color/white1"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/air_set_mode_arefaction"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:padding="@dimen/dp_5"
                android:background="@drawable/set_button_bg"
                android:gravity="center"
                android:text="除湿"
                android:textColor="@color/white1"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/air_set_mode_wind"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:padding="@dimen/dp_5"
                android:background="@drawable/set_button_bg"
                android:gravity="center"
                android:text="扫风"
                android:textColor="@color/white1"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="@dimen/dp_2"
        android:layout_height="@dimen/dp_40"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll_air"
        android:background="@color/viewfinder_laser"/>

    <ImageView
        android:id="@+id/air_control_close"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll_air"
        android:layout_marginTop="@dimen/dp_30"
        android:src="@drawable/close"/>

</RelativeLayout>
