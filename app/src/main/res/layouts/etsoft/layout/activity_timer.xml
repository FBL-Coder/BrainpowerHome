<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menuup_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/dp_150">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="定时器名称："
                        android:textColor="@color/main_white3"
                        android:textSize="@dimen/sp_18" />

                    <EditText
                        android:id="@+id/Timer_Name"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="无"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:text="使能"
                        android:textColor="@color/main_white3"
                        android:textSize="@dimen/sp_18" />

                    <ImageView
                        android:id="@+id/Timer_ShiNeng"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_10"
                        android:src="@drawable/checkbox1_unselect" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:text="周重复"
                        android:textColor="@color/main_white3"
                        android:textSize="@dimen/sp_18" />

                    <ImageView
                        android:id="@+id/Timer_WeekAgain"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_10"
                        android:src="@drawable/checkbox1_unselect" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:text="全网"
                        android:textColor="@color/main_white3"
                        android:textSize="@dimen/sp_18" />

                    <ImageView
                        android:id="@+id/Timer_QuanWang"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_10"
                        android:src="@drawable/checkbox1_unselect" />

                    <TextView
                        android:id="@+id/Timer_AddDev"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:gravity="center"
                        android:text="添加设备"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_22"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Timer_Save_Btn"
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_20"
                        android:gravity="center"
                        android:text="保存"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_22"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/dp_200">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_10"
                        android:gravity="center"
                        android:text="星期集"
                        android:textColor="@color/main_white3"
                        android:textSize="@dimen/sp_18" />

                    <TextView
                        android:id="@+id/Timer_Weeks"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minWidth="@dimen/dp_80"
                        android:text="点击选择星期集"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:text="开始时间"
                        android:textColor="@color/main_white3"
                        android:textSize="@dimen/sp_18" />

                    <TextView
                        android:id="@+id/Timer_TImer_StartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:gravity="center"
                        android:minWidth="@dimen/dp_80"
                        android:src="@mipmap/ic_launcher_round"
                        android:text="点击选择时间"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:text="结束时间"
                        android:textColor="@color/main_white3"
                        android:textSize="@dimen/sp_18" />

                    <TextView
                        android:id="@+id/Timer_EndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_30"
                        android:gravity="center"
                        android:minWidth="@dimen/dp_80"
                        android:src="@mipmap/ic_launcher_round"
                        android:text="点击选择时间"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_250">

            <TextView
                android:id="@+id/null_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|bottom"
                android:padding="@dimen/dp_20"
                android:text="没有数据"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20"
                android:textStyle="italic" />

            <GridView
                android:id="@+id/Timer_GirdView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:horizontalSpacing="@dimen/dp_10"
                android:numColumns="2"
                android:padding="@dimen/dp_10"
                android:verticalSpacing="@dimen/dp_10" />

        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="@dimen/dp_250"
        android:layout_height="match_parent">

        <cn.etsoft.smarthome.View.CircleMenu.CircleMenuLayout
            android:id="@+id/Timer_CircleMenu"
            android:layout_width="@dimen/dp_250"
            android:layout_height="550dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circlebg" />
    </FrameLayout>
</RelativeLayout>
