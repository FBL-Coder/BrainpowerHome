<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <GridView
        android:id="@+id/DevInfo_Info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_250"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@null"
        android:horizontalSpacing="@dimen/dp_10"
        android:numColumns="2"
        android:padding="@dimen/dp_10"
        android:verticalSpacing="@dimen/dp_10" />

    <TextView
        android:id="@+id/Dev_Info_NullData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_250"
        android:layout_marginTop="@dimen/dp_50"
        android:gravity="right|bottom"
        android:padding="@dimen/dp_20"
        android:text="没有数据"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/menuup_bg"
        android:paddingLeft="@dimen/dp_150">

        <TextView
            android:id="@+id/Dev_Info_AddDevs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="center"
            android:text="添加新设备"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_22"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_250"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <cn.etsoft.smarthome.View.CircleMenu.CircleMenuLayout
            android:id="@+id/DevInfo_CircleMenu"
            android:layout_width="@dimen/dp_250"
            android:layout_height="550dp"
            android:background="@drawable/circlebg" />
    </RelativeLayout>

</RelativeLayout>
