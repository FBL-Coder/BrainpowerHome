<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_item_bg"
    android:padding="@dimen/dp_10">

    <LinearLayout
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="设备名称  :"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/SceneSet_GridView_Item_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:minWidth="@dimen/dp_100"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>


    <ImageView
        android:id="@+id/SceneSet_GridView_Item_IV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        android:layout_below="@id/item_title"
        android:padding="@dimen/dp_10"
        android:layout_centerHorizontal="true"
        android:src="@drawable/dg_dev_item_close" />


    <ImageView
        android:id="@+id/SceneSet_GridView_Item_Select"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:padding="@dimen/dp_15"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@drawable/select_no" />

    <com.jaygoo.widget.RangeSeekBar
        android:id="@+id/SceneSet_GridView_Item_Slide"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_60"
        android:layout_below="@id/SceneSet_GridView_Item_IV"
        android:layout_centerHorizontal="true"
        app:cellMode="other"
        app:cells="4"
        app:hideProgressHint="true"
        app:hintBGHeight="@dimen/dp_28"
        app:lineColorEdge="@color/colorAccent"
        app:lineColorSelected="@color/color_10AEFF"
        app:markTextArray="@array/wordsArray"
        app:seekBarHeight="@dimen/dp_8"
        app:seekBarMode="single"
        app:textPadding="@dimen/sp_16"
        app:textSize="@dimen/sp_12"
        app:thumbSize="@dimen/sp_26" />

</RelativeLayout>
